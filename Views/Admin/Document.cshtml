@model WebApplication16.Data.Models.Document
@using WebApplication16.Data.Models;

<div class="container mx-auto p-8">
    <h2 class="text-2xl font-bold">Admin: @Model.Title</h2>

    <p class="mt-2"><b>Status:</b> @Model.Status</p>

    <form method="post" asp-action="ChangeStatus"
          class="mt-4 p-4 bg-white rounded shadow max-w-sm">

        <input type="hidden" name="id" value="@Model.Id" />

        <label class="block mb-1">New Status</label>

        <select name="newStatus" class="border rounded p-2 w-full">
            @foreach (var s in Enum.GetValues(typeof(Document.DocumentStatus)))
            {
                <option value="@s">@s</option>
            }
        </select>

        <button type="submit"
                class="mt-3 px-4 py-2 bg-blue-600 text-white rounded">
            Change
        </button>
    </form>

    <hr class="my-6" />

    <h3 class="text-xl font-semibold mb-2">History</h3>
    <p class="text-gray-500">History not implemented.</p>
</div>
