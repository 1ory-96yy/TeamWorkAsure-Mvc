<h2 class="text-2xl font-bold mb-4">Upload Document</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data"
      class="space-y-4 max-w-lg bg-white p-6 rounded shadow">

    <div>
        <label class="block mb-1">Choose file</label>
        <input type="file" name="file" class="border rounded p-2 w-full" />
    </div>

    <div>
        <label class="block mb-1">Title</label>
        <input type="text" name="title" class="border rounded p-2 w-full" />
    </div>

    <button type="submit"
            class="px-4 py-2 bg-blue-600 text-white rounded">
        Upload
    </button>
</form>
