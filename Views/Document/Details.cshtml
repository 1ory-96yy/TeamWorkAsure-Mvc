@model WebApplication16.Data.Models.Document

<div class="container mx-auto p-8">

    <h2 class="text-2xl font-bold">@Model.Title</h2>

    <p class="mt-2"><b>Status:</b> @Model.Status</p>
    <p><b>Blob:</b> @Model.BlobName</p>
    <p><b>User ID:</b> @Model.UserId</p>

    <a href="/files/@Model.BlobName"
       class="inline-block mt-4 px-4 py-2 bg-green-600 text-white rounded">
        Download
    </a>

    <hr class="my-6" />

    <h3 class="text-xl font-semibold mb-2">History</h3>

    <p class="text-gray-500">History is not implemented yet.</p>
</div>
