@model IEnumerable<WebApplication16.Data.Models.Document>

<div class="container mx-auto p-8">
    <h2 class="text-2xl font-bold mb-4">My Documents</h2>

    <a href="/Document/Upload"
       class="inline-block mb-4 px-4 py-2 bg-green-600 text-white rounded">
        Upload New Document
    </a>

    <table class="min-w-full bg-white shadow rounded overflow-hidden">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-2 text-left">ID</th>
                <th class="px-4 py-2 text-left">Title</th>
                <th class="px-4 py-2 text-left">Status</th>
                <th class="px-4 py-2 text-left">Blob</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in Model)
            {
                <tr class="border-t">
                    <td class="px-4 py-2">@doc.Id</td>
                    <td class="px-4 py-2">@doc.Title</td>
                    <td class="px-4 py-2">@doc.Status</td>
                    <td class="px-4 py-2">@doc.BlobName</td>
                    <td class="px-4 py-2 text-right">
                        <a href="/Document/Details/@doc.Id"
                           class="px-3 py-1 bg-blue-600 text-white rounded">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
